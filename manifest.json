{
  "name": "Evaly Cashback Calculator",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Evaly Cashback Calculator",
  "homepage_url": "https://coderitem.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Evaly Cashback Calcualtor",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "idle",
    "clipboardRead"
  ]
}