{
	"name": "Evaly Cashback Calculator",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "Evaly Cashback Calculator",
	"homepage_url": "https://github.com/sarequl",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"options_page": "src/options/index.html",
	"browser_action": {
		"default_icon": "icons/icon19.png",
		"default_title": "Evaly Cashback Calcualtor",
		"default_popup": "src/browser_action/browser_action.html"
	},
	"content_scripts": [
		{
			"matches": ["https://*.evaly.com.bd/*"],
			"js": ["src/discountDisplay.js"]
		}
	]
}
